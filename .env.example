# =================================
# Nozama E-Commerce Platform
# Global Docker Environment Variables
# =================================

# Environment
NODE_ENV=production

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_SEARCH_DB=nozama-search
MONGODB_LISTING_DB=nozama-listings
MONGODB_ORDER_DB=nozama-orders
MONGODB_PAYMENT_DB=nozama-payments
MONGODB_IDENTITY_DB=nozama-identity

# Blockchain Configuration
# Note: Use host.docker.internal to connect to Hardhat node running on host machine
BLOCKCHAIN_RPC_URL=http://host.docker.internal:8545
BLOCKCHAIN_NETWORK=localhost

# Smart Contract Addresses (Update after deployment)
PRODUCT_REGISTRY_ADDRESS=0x5FbDB2315678afecb367f032d93F642f64180aa3
REPUTATION_CONTRACT_ADDRESS=0xe7f1725E7734CE288F8367e1Bb143E90bb3F0512
LISTING_REGISTRY_ADDRESS=0x9fE46736679d2D9a65F0992F2272dE9f3c7fa6e0
ORDER_MANAGER_ADDRESS=0xCf7Ed3AccA5a467e9e704C703E8D87F634fB0Fc9
ESCROW_ADDRESS=0xDc64a140Aa3E981100a9becA4E685f962f0cF6C9

# IPFS Configuration
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/
PINATA_API_KEY=
PINATA_SECRET_KEY=

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Search Service Configuration
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
SEARCH_TIMEOUT_MS=5000

# Health Check
HEALTH_CHECK_INTERVAL=30000
METRICS_PORT=9090
